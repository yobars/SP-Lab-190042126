<% for(let i = 0; i<languages.length; i++){ %>
  <div class="w3-container">
    <h5 class="w3-opacity"><b><%= languages[i]["lang"] %></b></h5>
    <div class="w3-round-xlarge">
      <div class="w3-round-xlarge w3-teal" style="height: 24px; width: <%= languages[i]["percentage"] %>;"></div><%= languages[i]["percentage"] %>
    </div>
    <hr />
  </div>
  <%}%>

